@model IEnumerable<Categoria>

<ul class="list-group">
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-controller="Productos" asp-action="Index">Todos los productos</a>
    </li>

    @foreach(var item in Model)
    {
        <li class="list-group-item">
            <a class="nav-link text-dark" asp-controller="Productos" asp-action="Index">@item.Nombre</a>
        </li>
    }
</ul>